{
  "name": "@chronoguard/backend",
  "version": "1.0.0",
  "description": "ChronoGuard Pro Backend API",
  "main": "app/main.py",
  "scripts": {
    "dev": "python -m uvicorn app.db_main:app --reload --port 7000",
